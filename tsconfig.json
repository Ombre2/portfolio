{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    ".",
    "src/types/**/*.d.ts" // Ajoutez cette ligne pour inclure les types
  ],
  "paths": {
    "@/*": ["src/*"],
    "@public/*": ["src/public/*"],
    "@public/main/*": ["src/public/main/*"],
    "@public/modules/*": ["src/public/modules/*"],
    "@public/router/*": ["src/public/router/*"],
    "@shared/*": ["src/shared/*"],
    "@private/*": ["src/private/*"]
  }
}
